    <%= f.label :username, "Username:" %>
    <%= f.text_field :username, value: "user_unknown" %>
    <%= f.label :email, "E-mail:" %>
    <%= f.text_field :email , placeholder: "example@example.com"%>
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password %>
    <%= f.submit "Submit" %>
<% end %>

